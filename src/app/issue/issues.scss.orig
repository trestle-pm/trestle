$border_radius_card:3px;
.card_wrapper {
    list-style: none;
}
.card {
    border     : 1px solid darken($color_background,20);
    box-shadow : 1px 1px 3px rgba(0,0,0,.5);
    border-radius: $border_radius_card;
    width    : 100%;
    position : relative;
    margin   : 8px 0;
    padding: 0;
    background: lighten($color_grey,30);
    list-style-type: none;
    min-height:42px;

    /** styling for the build headers */
    .build_header {
        height : 5px;
        margin-top:-1px;
        width  : 100%;
        border-radius: $border_radius_card $border_radius_card 0 0;
        $build-color: $color_grey;
        background: $build-color;
        border-top: 1px solid lighten($build-color, 15);
        border-bottom: 1px solid darken($build-color, 10);
    }

    &.success .build_header {
        $build-color: $color_success;
        background: $build-color;
        border-top: 1px solid lighten($build-color, 15);
        border-bottom: 1px solid darken($build-color, 10);
    }
    &.failure .build_header {
        $build-color: $color_danger;
        background: $build-color;
        border-top: 1px solid lighten($build-color, 15);
        border-bottom: 1px solid darken($build-color, 10);
    }
    &.pending .build_header {
        $build-color: $color_primary ;
        background: $build-color;
        border-top: 1px solid lighten($build-color, 15);
        border-bottom: 1px solid darken($build-color, 10);
    }
    &.unknown .build_header {
        $build-color: $color_grey;
        background: $build-color;
        border-top: 1px solid lighten($build-color, 15);
        border-bottom: 1px solid darken($build-color, 10);
    }

    &.dragging {
        background: blue;
    }

    .header {
        margin: 0;
        padding: 3px 50px 3px 5px;
        font-size:1.2em;
        font-weight:bold;
        background:#fff;
        border-bottom: 1px solid lighten($color_grey,20);
		position:relative;
		&:first-child {
			border-radius: $border_radius_card $border_radius_card 0 0;
		}
    }
        .icon-code-fork {
            color: darken($color_grey, 15);
            font-size:1em;
            font-weight:bold;
            margin-right:1px;
        }
        .number{
            display:inline-block;
            border: 1px solid $color_primary ;
            color: $color_primary ;
            font-size: .85em;
            font-weight: normal;
            padding: 0 4px;
            border-radius:$border_radius_card;
            background-color: lighten($color_primary ,45);
            &:hover{
                text-decoration:none;
                background-color: $color_primary ;
                color:#fff;
                    .icon-code-fork{
                        color:#fff;
                    }
            }
        }
        .title {

            white-space: normal;
            line-height:1.3em;
        }
        .avatar{
            height:50px;
            max-height:50px;
            max-width:50px;
            position:absolute;
            right:-5px;
            top:-6px;
            border-radius:25px;
            border: 1px solid rgba(0,0,0,.5);
            box-shadow : 1px 0 4px rgba(0,0,0,.5);
			&.empty {
			    height: 25px;
			    right: 0;
			    top: -1px;
			    border-radius: 0;
			    box-shadow: none;
			    opacity: .7;
			}
        }
    .content{
        margin: 0;
        padding: 0 5px;
        white-space:normal;
    }

    .milestone{
        display: inline-block;
        padding: 2px 10px 2px 7px;
        margin: 1px 2px 1px -8px;
        line-height: 14px;
        color: #ffffff;
        vertical-align: baseline;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.35);
        background-color:darken($color_grey,0);
        border:1px solid darken($color_grey,20);
        border-top-color: lighten($color_grey, 5);
        border-left-color:darken($color_grey,45);
        font-style: italic;
        font-weight: normal;
        font-size:.9em;
        border-radius: 0 $border_radius_card $border_radius_card 0;
    }

    .label{
        overflow:hidden;
        border-bottom:1px solid rgba(0, 0, 0, 0.35);
        border-right:1px solid rgba(0, 0, 0, 0.35);
        text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.35);
        display:inline-block;
        margin:2px;
    }





    /** Voting styling */
    .reviews {
        position : relative;
        white-space: normal;
        padding: 3px 6px 1px;
        .vote_count {
            display : inline-block;
            margin   : 0 0 2px 0;
            padding  : 2px 8px 3px;

            border-radius : 13px 0 0 13px;
            background    : $color_grey;

            color: #ffffff;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.35);
            box-shadow: -1px -1px 0 rgba(0, 0, 0, 0.45), 1px 1px 0 rgba(255,255,255, 1);
            font-weight: bold;
            font-size:1em;

            &.even{
                border-radius : 13px;
            }
            &.positive {
                background: $color_success;
            }
            &.negative {
                background: $color_danger;
            }
        }

        .vote_avatar {
            max-width    : 20px;
            max-height   : 20px;
            border-style : solid;
            border-width : 3px;
            margin       : 0 4px 2px -1px;
            border-color : grey;
            vertical-align:middle;
            &.yes {
                border-color: darken($color_success,5);
            }
            &.no {
                border-color: darken($color_danger,5);
            }

        }


    }
    .stats{
        position:absolute;
        right:3px;
        bottom:5px;
        padding:0 4px;
        color:$color_grey;
        font-size:1.2em;
        &:hover{
            color:darken($color_grey,35);
        }
        span{
            margin-right:10px;
            &.todos i{
                margin-right:5px;
            }
            &:last-child{
                margin-right:0;
            }
        }
    }

}

.issue_detail {
   .user-selector {
      .dropdown-menu {
        li {
            &:hover {
                background: blue;
            }
            margin: 4px;

            .avatar {
                padding: 4px;
            }
        }
      }
   }
}

.convert_to_pull {
    margin: 8px;

    .branch-selector {
        display: inline-block;
    }

    .branch-pulldown {
        width: 300px;
        margin-top: 4px;
        margin-bottom: 20px;
        overflow: hidden;
        font-size: 12px;
        color: #666;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ccc;
        border: 1px solid rgba(0,0,0,0.15);
        border-radius: 5px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.25);

        .menu-header {
            padding: 8px 10px;
            background-color: #eeeeee;
            background-image: -moz-linear-gradient(#fafafa, #eee);
            background-image: -webkit-linear-gradient(#fafafa, #eee);
            background-image: linear-gradient(#fafafa, #eee);
            background-repeat: repeat-x;
            border-bottom: 1px solid #ddd;
        }

        .menu-list {
            max-height: 400px;
            overflow: auto;
        }

        .menu-item {
            cursor: pointer;
            border-bottom: 1px solid #eee;
            display: table;
            table-layout: fixed;
            width: 100%;
            overflow: hidden;
            color: inherit;

            &:hover {
                background: blue;
            }
        }
    }
}


.modal {
    border     : 1px solid #000;
    box-shadow : 1px 1px 3px rgba(0,0,0,.5);
    border-radius: $border_radius_card;
    padding  : 0;
    background: #fff;

	.header {
	    margin: 0;
	    padding: 3px 90px 3px 55px;
	    font-size: 1.2em;
	    font-weight:bold;
	    background:lighten($color_grey,30);
	    border-bottom: 1px solid lighten($color_grey,20);
	    position:relative;
		border-radius: $border_radius_card $border_radius_card 0 0;
	}
	.close{
	        float:none;
	        position:absolute;
	        right:5px;
	        top:3px;
	    }
	    .number{
	        position:absolute;
	        top:2px;
	        right:28px;
	        display:inline-block;
	        border: 1px solid $color_primary;
	        color: $color_primary;
	        font-size: .85em;
	        font-weight: normal;
	        padding: 0 4px;
	        border-radius:3px;
	        background-color: lighten($color_primary,45);
	        &:hover{
	            text-decoration:none;
	            background-color: $color_primary;
	            color:#fff;
	                .icon-code-fork{
	                    color:#fff;
	                }
	        }
	    }
	    .icon-code-fork {
	        color: darken($color_grey, 15);
	        font-size:1em;
	        font-weight:bold;
	        margin-right:1px;
	    }
	    .title {
	        white-space: normal;
	        line-height:1.3em;
	    }
		.user-selector{
			position:static;
		}
	    .avatar{
	        height:50px;
			max-height:50px;
			max-width:50px;
	        position:absolute;
	        left:-5px;
	        top:-6px;
	        border-radius:25px;
	        border: 1px solid rgba(0,0,0,.5);
	        box-shadow : 1px 0 4px rgba(0,0,0,.5);
	    	z-index:100;
	    }
	
		.status_header{
		    width:100%;
		    height:28px;
		    padding:0;
		    background-color:$color_grey;
		    border-top:1px solid darken($color_grey,10);
		    border-bottom:1px solid darken($color_grey,10);
		    position:relative;
		}
	 .build_status{
	        padding:3px 0 3px 55px;
	        border-right: 1px solid darken($color_grey,15);
	        display:inline-block;
	        width:60%;
	        box-sizing:border-box;
	        height:100%;
	        z-index:10;
	        overflow: hidden;

	        &.success{
	            $build-color: $color_success;
	            background: lighten($build-color,30);
	            color:darken($build-color,15);
	        }
	        &.failure{
	            $build-color: $color_danger;
	            background: lighten($build-color,30);
	            color:darken($build-color,15);
	        }
	        &.pending{
	            $build-color: $color_primary ;
	            background: lighten($build-color,30);
	            color:darken($build-color,15);
	        }
	        &.unknown{
	            $build-color: $color_grey;
	            background: lighten($build-color,30);
	            color:darken($build-color,15);
	        }
	    }
	    .comment_summary{
	        position:absolute;
	        right:1px;
	        top:0;
	        z-index:0;
	        min-width:40%;
	        text-align:right;
	        display:inline-block;
	        padding: 3px 0;
	        box-sizing:border-box;
	        margin:0;
	        height:100%;
	        color:#fff;
	        font-size:1.2em;
	        i{
	            color:lighten($color_grey,30);
	        }
	        span{
	            margin-right:10px;
	            &.todos i{
	                margin-right:4px;
	            }
	            &:last-child{
	                margin-right:0;
	            }
	        }
	    }
		.controls{
		    padding:5px 10px;
		    background-color:#fff;
		    border-bottom:1px solid lighten($color_grey,25);
		    box-shadow: 0 3px 3px rgba(0,0,0,.1);
		}
		select.milestone{
		    display: inline-block;
		    padding: 0;
		    color: #000;
		    font-size:1em;
		    width:20%;
		    margin-bottom: 0;
		}

		input.label_bar{
		    width:50%;
		    margin-bottom: 0;
		}

		.convert_pull{
		    width:25%;
		    margin-bottom:2px;
		}
		.branch_info{
		    display:none;
		}

		.pull{
		    .milestone{
		        width:40%;
		    }

		    .label_bar{
		        width:55%;
		    }
		    .convert_pull{
		        display:none;
		    }
		    .branch_info{
		        display:block;
		        width:100%;
		        box-sizing:border-box;
		        padding:3px 5px;
		        text-align:center;
		        background-color:lighten($color_grey,35);
		        border-bottom:1px solid lighten($color_grey,25);
		        font-size:.9em;
		        pre{
		            display:inline;
		            font-size:.95em;
		            padding:1px 4px;
		            background-color:lighten($color_primary,40);
		            border-color:lighten($color_primary,30);
		        }
		    }
		}






		/** Voting styling */
		.vote_count {
		    display : inline-block;
		    margin   : 0;
		    padding  : 0px 8px 0px;

		    border-radius : 13px 0 0 13px;
		    background    : $color_grey;

		    color: #ffffff;
		    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.35);
		    box-shadow: -1px -1px 0 rgba(0, 0, 0, 0.45), 1px 1px 0 rgba(255,255,255, .3);
		    font-weight: bold;
		    font-size:1em;

		    &.positive {
		        background: $color_success;
		    }
		    &.negative {
		        background: $color_danger;
		    }
		}
}